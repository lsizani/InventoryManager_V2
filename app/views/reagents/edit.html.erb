<%= form_for :reagent, :url => { :action => 'update' }, :html => { :method => 'put' } do |r| %>

    <p>
      <%= r.label :received_Date %>
      <%= r.date_select :received_date %>

      <%= r.label :expiration_Date %>
      <%= r.date_select :expiration_date %>
    </p>

    <p>
      <%= r.label :lot_Number %>
      <%= r.text_field :item_lot_no %>

      <%= r.label :cat_Number %>
      <%= r.text_field :item_cat_no %>
    </p>

    <p>
      <%= r.label :storage_Temp %>
      <%= r.text_field :storage_temp_kit %> &deg;<strong>C</strong>

      <%= r.label :storage_Location %>
      <%= r.text_field :storage_location, :class => "required" %>
    </p>

    <p>
      <%= r.label :delivered_Amount %>
      <%= r.text_field :delivered_amount, :value => "#{@order.request.requested_amount - @order.back_order_amount}" %>    |
      <strong>Requested_Amount: </strong><%= @order.request.requested_amount %> Units | Amount on Back Order: <%= @order.back_order_amount %>
    </p>
    <%= hidden_field_tag 'order_id', @order.id %>
    <%= r.submit %>
<% end %>